<%- include('templates/cabecera', {tituloWeb: titulo }) %>
<div class="mt-20 flex justify-center">
    <h1 id="cajon-titulo"class="titulo" data-cajon="<%=cajon%>"><%= titulo %></h1>
</div>
<div >
    <div>
        <img class="logo" src="https://img.icons8.com/bubbles/256/watches-front-view--v2.png" alt="">
        <div id="digital-clock" class="text-center my-3">

        </div>
    </div>
    <div class="alarma">

        <div class="flex justify-center">
            <h1 class="titulo-alarma">Alarmas</h1>
        </div>
        <div data-info="<%= alarmsArray %>" id="alarm-list"  data-usuario="<%= locals.usuario %>" data-idusuario="<%= locals.idusuario %>">
            <form action="" id="formularioAlarmaPreparada">
                <select name="alarm-list-select" id="alarm-list-select" class="bg-rose-50 border border-rose-300 text-gray-900 text-sm rounded-lg focus:ring-rose-500 focus:border-rose-500 p-2.5 dark:bg-rose-50 dark:border-rose-300 dark:placeholder-rose-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    
                </select>
                <input id="btnEliminar" type="button"
                value="Eliminar Alarma"
                class="text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
             </form>
        </div>
        <hr>
        
        <div class="items-center text-center my-5">
        <form id="formularioAlarma" action="">
            <label for="hour" class="mb-2 text-sm font-medium text-gray-900 dark:text-white">H:</label>
            <input type="number" name="hour" id="hour" value="0" class="bg-rose-50 border border-rose-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-transparent dark:border-rose-300 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <label for="hour" class="mb-2 text-sm font-medium text-gray-900 dark:text-white">M:</label>
            <input type="number" name="minute" id="minute" value="0" class="bg-rose-50 border border-rose-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-transparent dark:border-rose-300 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <!-- <label for="hour" class="mb-2 text-sm font-medium text-gray-900 dark:text-white">S:</label>
            <input type="number" name="second" id="second" value="0" class="bg-rose-50 border border-rose-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-transparent dark:border-rose-300 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"> -->
            <div id="day-div">
